    outline: none;
    border-color: rgb(229, 9, 22);
    border-radius: 5px;
}
.btn{
    display:inline;
    padding:0.5rem 0.75rem;
    background: rgb(229, 9, 22);
    color: inherit;
    border-radius: 15px;
    cursor: pointer;
    outline: none;
    text-transform: uppercase;
    font-size: 1.5rem;
