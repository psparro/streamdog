<div class="container2">
        <header class="header">
            <h1 id="title" style="color: rgb(229, 9, 22);">
                Add movie to STREAMDOG
            </h1>
            <p id="description">
                Let's show our audience what we got today!
            </p>
        </header>
        <form action="/new/add" id="survey-form" method="POST" enctype="multipart/form-data">

            <div class="form-group">
                <label id="quest">Name of movie or TV show</label>
                <input type="text" name="name" id="name" class="formControl" placeholder="Eg. Project Power" required>
            </div>

            <div class="form-group">
                <label id="quest">Release Date</label>
                <input type="text" name="releaseDate"  class="formControl" placeholder="Eg. 14 August 2020 (Canada)" required>
            </div>

            <div class="form-group">
                <label id="quest">IMDB rating</label>
                <input  type="number" step="0.1" name="imdb" id="phone" class="formControl" placeholder="Eg. 8.2" required>
            </div>

            <div class="form-group">
                <label id="quest">Length</label>
                <input type="text" name="length" id="address" class="formControl" placeholder="Eg. 4 Seasons or 14 August 2020 (Canada)" required>
            </div>

            <div class="form-group">
                <label id="quest">Buying price</label>
                <input  type="number" step="0.01" name="Bprice" class="formControl" placeholder="Eg. 3.49" required>
            </div>

            <div class="form-group">
                <label id="quest">Rental price</label>
                <input  type="number" step="0.01" name="Rprice" class="formControl" placeholder="Eg. 10.49" required>
            </div>

            <div class="form-group">
                <p id="quest">Type (Movie or TV show)</p>
                <select name="role" required id="dropdown" class="formControl">
                    <option value disabled selected >Select type</option>
                    <option value="movie">Movie</option>
                    <option value="tv">TV Show</option>
                </select>
            </div> 

            {{!-- <div class="form-group">
                <p id="quest">Featured?</p>
                <label>
                    <input type="checkbox" name="featured" class="checkbox"> True
                </label>
            </div> --}}

            <div class="form-group">
                <label id="quest">Tags<span class="clue">Add up to 3 tags</span></label>
                <input type="text" name="tags" id="address" class="formControl" placeholder="Eg. Action, Crime, Sci-Fi" required>
            </div>
            
            <div class="form-group">
                <p id="quest">About this movie</p> 
                <textarea name="about"  cols="30" rows="5"  id="feedback" class="textarea" placeholder="Try to explain about movie as much as you can"></textarea>
            </div>

            <div class="form-group">
                <label id="quest">Directors</label>
                <input type="text" name="directors" id="address" class="formControl" placeholder="Eg. Matt Duffer, Ross Duffer" required>
            </div>

            <div class="form-group">
                <label id="quest">Regular Poster</label>
                <input type="file" name="regPoster" class="formControl" required>
            </div>

            <div class="form-group">
                <button type="submit" id="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>